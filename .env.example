# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-railway-domain.up.railway.app

# Database (Railway provides this automatically when you add PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/dbname

# CSRF trusted origins (required for Railway)
CSRF_TRUSTED_ORIGINS=https://your-railway-domain.up.railway.app

# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Auto-create superuser on first deploy
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your-secure-password
